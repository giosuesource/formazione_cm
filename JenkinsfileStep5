import java.text.SimpleDateFormat
import java.util.Date

pipeline {
    agent any

    environment {
        GIT_CREDENTIAL = 'pass_git'
        DOCKER_CREDENTIAL = 'pass_docker'
        DOCKER_REGISTRY = 'localhost:5000'
        DOCKER_IMAGE = 'ImageF'
        DATED_GIT_HASH = "${new SimpleDateFormat("yyMMddHHmmss").format(new Date())}${GIT_COMMIT.take(6)}"
        GITHUB_TOKEN = credentials(token)
    }

   stages {

    	stage('Checkout') {
            steps {
	          	checkout scm
			script{
				sh 'curl -H "Authorization: Bearer $GITHUB_TOKEN" https://api.github.com/repos/OWNER/REPO/statuses/COMMIT_SHA'
			}
	           }
        }

	    
		

        stage('build') {
            steps {
                script {
		    docker.build("giosuemanzo${DOCKER_IMAGE}:${DATED_GIT_HASH}")
            }
        }
      }     

 	stage('Push') {
            steps {
                    script {
			docker.withRegistry('https://index.docker.io/v1/', 'password_docker'){
          def image = docker.image(${DOCKER_IMAGE}, ${DATED_GIT_HASH})
          image.push()
		              	}
                  }
             }
         }
        
    }
  }
