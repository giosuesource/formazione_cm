pipeline {
    agent any
	  

    environment {
        GIT_CREDENTIAL = 'pass_git'
        DOCKER_REGISTRY = 'localhost:5000'
    }

   stages {

    	stage('Checkout') {
            steps {
	          	checkout scm
			
	           }
        }

	    
		

        stage('Build') {
            steps {
                script {
                    def DATED_GIT_HASH = new Date().format("yyyyMMdd-HHmmss")
                    
		    def TAG = "esperimento:${DATED_GIT_HASH}"
		    
                    def imagef = docker.build("${DOCKER_REGISTRY}:${TAG}")
                }
            }
        }

        stage('Push') {
            steps {
                script {
                        image.push(imagef)
      	              }
            }
        }
    }
}
