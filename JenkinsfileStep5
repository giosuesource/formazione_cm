pipeline {
    agent any
	  

    environment {
        GIT_CREDENTIAL = 'pass_git'
        DOCKER_CREDENTIAL = 'pass_docker'
        DOCKER_REGISTRY = 'localhost:5000'
        DOCKER_IMAGE = 'ImageF'
    }

   stages {

    	stage('Checkout') {
            steps {
	          	checkout scm
			
	           }
        }

	    
		

        stage('Build') {
            steps {
                script {
                    def DATED_GIT_HASH = new Date().format("yyyyMMdd-HHmmss", TimeZone.getTimeZone('UTC'))
                    
		    def TAG = "${DOCKER_IMAGE}:${env.DATED_GIT_HASH}"
		    
                    docker.build("${DOCKER_REGISTRY}:${TAG}")
                }
            }
        }

        stage('Push') {
            steps {
                script {
                    docker.withRegistry('DOCKER_REGISTRY', 'password_docker') {
                        def image = docker.image("giosuemanzo${DOCKER_IMAGE}:${TAG}")
                        image.push()
                    }
                }
            }
        }
    }
}
