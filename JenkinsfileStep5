pipeline {
    agent any

    environment {
        GIT_CREDENTIAL = 'pass_git'
        DOCKER_CREDENTIAL = 'pass_docker'
        DOCKER_REGISTRY = 'localhost:5000'
        DOCKER_IMAGE = 'ImageF'
	DATED_GIT_HASH = "new Date().format('yyyyMMddHHmmss')"
        GITHUB_TOKEN = credentials('token')
    }

   stages {

    	stage('Checkout') {
            steps {
	          	checkout scm
			
	           }
        }

	    
		

        stage('Build') {
            steps {
                script {
                    
                    docker.build("giosuemanzo${DOCKER_IMAGE}:${DATED_GIT_HASH}")
                }
            }
        }

        stage('Push') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'password_docker') {
                        def image = docker.image("giosuemanzo${DOCKER_IMAGE}:${datedGitHash}")
                        image.push()
                    }
                }
            }
        }
    }
}
